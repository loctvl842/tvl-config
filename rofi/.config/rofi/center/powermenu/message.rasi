/* Message Dialog */

@import "styles/tokyo-night.rasi"

* {
  background-color: transparent;
  text-color: @foreground-message;
	font: "Fira Code 18";
}

window {
  width: 650px;
  padding: 25 0 25 30;
  border: 0.4% 0.0% 0.4% 0.0%;
  border-radius: 10px;
  border-color: @border;
  location: center;
  y-offset: -2em;
  background-color: @background;
}
